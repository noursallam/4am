---
import Button from "../shared/Button.astro";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
---

<section id="cta" class="pb-20">
  <Container>
    <div
      class="w-full relative py-12 md:py-16 px-6 md:px-8 rounded-2xl bg-gradient-to-tr from-gray-100 to-gray-200 dark:from-gray-900 shadow-xl border border-gray-200 dark:border-gray-800"
      data-aos="fade-up"
      data-aos-delay="100"
    >
      <!-- Decorative elements -->
      <div class="absolute right-0 top-0 h-full w-full flex justify-end">
        <div class="w-28 h-28 overflow-auto flex rounded-xl relative blur-2xl">
          <span
            class="absolute w-16 h-16 -top-1 -right-1 bg-green-500 rounded-md rotate-45 animate-pulse"
          ></span>
          <span
            class="absolute w-16 h-16 -bottom-1 -right-1 bg-[#FCDC58] rounded-md rotate-45 animate-pulse animation-delay-2000"
          ></span>
          <span
            class="absolute w-16 h-16 -bottom-1 -left-1 bg-primary rounded-md rotate-45 animate-pulse animation-delay-4000"
          ></span>
        </div>
      </div>

      <div class="absolute left-0 bottom-0 h-full w-full flex items-end">
        <div class="w-28 h-28 overflow-auto flex rounded-xl relative blur-2xl">
          <span
            class="absolute w-16 h-16 -top-1 -right-1 bg-green-500 rounded-md rotate-45 animate-pulse animation-delay-1000"
          ></span>
          <span
            class="absolute w-16 h-16 -bottom-1 -right-1 bg-[#FCDC58] rounded-md rotate-45 animate-pulse animation-delay-3000"
          ></span>
          <span
            class="absolute w-16 h-16 -bottom-1 -left-1 bg-primary rounded-md rotate-45 animate-pulse animation-delay-5000"
          ></span>
        </div>
      </div>

      <!-- Content -->
      <div class="mx-auto text-center max-w-xl md:max-w-2xl relative">
        <h1
          class="text-3xl/tight sm:text-4xl/tight md:text-5xl/tight font-bold text-heading-1 drop-shadow-sm"
        >
          ابدأ رحلة <span
            class="text-transparent bg-clip-text bg-gradient-to-br from-indigo-600 from-20% via-primary via-30% to-green-600"
            >نجاحك الرقمي</span
          > اليوم
        </h1>
        <Paragraph className={"pt-8 text-lg"}>
          دعنا نساعدك في تحقيق أهدافك التسويقية وبناء علامة تجارية قوية في
          العالم الرقمي
        </Paragraph>

        <!-- CTA Buttons -->
        <div
          class="mx-auto max-w-md sm:max-w-xl pt-10 flex flex-col sm:flex-row gap-4 justify-center"
        >
          <a
            href="https://mail.google.com/mail/?view=cm&fs=1&to=4amadvagency@gmail.com"
            class="inline-block"
            target="_blank"
            rel="noopener noreferrer"
          >
            <Button
              variant={"primary"}
              className={"hover:shadow-lg hover:shadow-primary/30 transition-all duration-300"}
            >
              <span class="text-white relative z-[5] flex items-center">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5 me-2"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
                  ></path>
                </svg>
                تواصل معنا
              </span>
            </Button>
          </a>

          <a
            href="https://mail.google.com/mail/?view=cm&fs=1&to=4amadvagency@gmail.com"
            class="inline-block"
            target="_blank"
            rel="noopener noreferrer"
          >
            <Button variant={"secondary"} className={"group"}>
              <span
                class="relative z-[5] flex items-center group-hover:text-primary transition-colors duration-300"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5 me-2"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"
                  ></path>
                </svg>
                طلب عرض سعر
              </span>
            </Button>
          </a>
        </div>

        <!-- Trust badges -->
        <div
          class="mt-12 flex justify-center items-center gap-x-8 gap-y-4 flex-wrap"
        >
          <div
            class="flex items-center text-sm text-gray-600 dark:text-gray-400 gap-2"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 text-green-500"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
              ></path>
            </svg>
            <span>ضمان الجودة</span>
          </div>

          <div
            class="flex items-center text-sm text-gray-600 dark:text-gray-400 gap-2"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 text-yellow-500"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>دعم 24/7</span>
          </div>

          <div
            class="flex items-center text-sm text-gray-600 dark:text-gray-400 gap-2"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 text-primary"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <!-- <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2z" />
            </svg>
            <span>تعديلات مجانية</span> -->
            </svg>
          </div>
        </div>
      </div>
    </div>
  </Container>

  <style>
    .animation-delay-1000 {
      animation-delay: 1s;
    }

    .animation-delay-2000 {
      animation-delay: 2s;
    }

    .animation-delay-3000 {
      animation-delay: 3s;
    }

    .animation-delay-4000 {
      animation-delay: 4s;
    }

    .animation-delay-5000 {
      animation-delay: 5s;
    }
  </style>
</section>
